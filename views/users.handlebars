<h3 class="mt-3">View Users</h3>
 <a href="/user/send_scheduled_messages">Send EMail</a>
{{#if message}} <span>{{message}}</span>{{/if}}

{{#each user}}
<ul class="list-group col-6 mb-2 mt-3">
  <li class="list-group-item"><strong>Name: </strong>{{fullname}}</li>
  <li class="list-group-item"><strong>Email: </strong>{{email}}</li>
</ul>
<form method="POST" action="/user/delete/{{@key}}?_method=DELETE">
 <a class="btn btn-default pull-left mt-10" href="/">Back</a>
  <input type="submit" class="btn btn-danger pull-right" value="Delete">
</form>
{{else}}

<h5 class="mt-3">No User is registered</h5>

{{/each}}
